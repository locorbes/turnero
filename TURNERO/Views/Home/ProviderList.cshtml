@model List<ProviderModel>
@{
    ViewData["Title"] = "Listado de proveedores";
    ViewData["Type"] = ViewBag.Type;
    ViewData["Id"] = ViewBag.Id;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Listado de proveedores
    </div>
    <div class="card-body">
        <a asp-action="ProviderCreate" asp-controller="Home" class="btn btn-success bg-blue"><i class="bi bi-plus-circle"></i> Crear proveedor</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>CUIT</th>
                    <th>Mail</th>
                    <th style ="width:180px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.name</td>
                        <td>@item.cuit</td>
                        <td>@item.commercial_mail</td>
                        <td>
                            <a asp-action="ProviderUpdate" asp-controller="Home" class="btn btn-primary bg-blue btn-sm" asp-route-id="@item.id"><i class="bi bi-pencil-fill"></i> Editar</a>
                            <a asp-action="ProviderDelete" asp-controller="Home" class="btn btn-danger bg-blue btn-sm" asp-route-id="@item.id"><i class="bi bi-trash-fill"></i> Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
