@model ContactModel
@{
    ViewData["Title"] = "DeleteForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar contacto
    </div>
    <div class="card-body">
        <form asp-action="Delete" asp-controller="Main" method="post">
            <input asp-for="id" type="hidden">
            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el contacto: @Html.DisplayTextFor( m => m.name)?
            </div>
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="List" asp-controller="Main" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>

